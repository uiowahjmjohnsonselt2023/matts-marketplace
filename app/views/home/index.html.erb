
<!-- Featured items -->
<h3 class="text-2xl font-semibold text-start m-4"> Featured Items</h3>
<div class="grid grid-cols-2 md:grid-cols-4 gap-4">
  <% @featured_items.each do |item|%>
    <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow ">
      <!-- Item picture -->
      <a href="#">
        <img class="p-8 rounded-t-lg" src="/docs/images/products/apple-watch.png" alt="product image" />
      </a>

      <!--Item Card body -->
      <div class="px-5 pb-5">
        <a href="#">
          <h5 class="text-xl font-semibold tracking-tight text-gray-900 "><%= item.description %></h5>
        </a>
        <span class="bg-blue-100 text-blue-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded"><%= item.category %></span>

        <!-- User name, avatar, and rating-->
        <div class="flex items-center mt-2.5 mb-5">
          <div class="flex items-center space-x-1 rtl:space-x-reverse text-sm">
            <div class="relative w-6 h-6 overflow-hidden bg-gray-100 rounded-full ">
              <svg class="absolute w-8 h-8 text-gray-400 -left-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
            </div>
            <p class="px-2">
              <%= item.user.first_name %> <%= item.user.last_name %>
            </p>
          </div>

          <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded "><%= item.user.rating.round(2) %></span>
        </div>

        <!-- Price and details button -->
        <div class="flex items-center justify-between">
          <span class="text-3xl font-bold text-gray-900 ">$<%= item.price %></span>
          <%= link_to "Details", item_path(item), class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        </div>
      </div>
    </div>
<% end %>
</div>

<!-- Category list -->
<h3 class="text-2xl font-semibold text-start m-4"> Shop by Category </h3>
<div class="grid grid-cols-2 lg:grid-cols-3 gap-4">
  <% @featured_items.each do |item|%>
    <div class="h-auto max-w-full rounded-lg">
      <%= link_to(items_path) do %>
        <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow ">
          <div class="p-5">
              <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 "> <%= item.description  %></h5>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>